<?xml version="1.0" encoding="utf-8"?>

<robot name="finger_right" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define a number of dimensions using properties -->
  <xacro:property name="finger_right_offset_x" value="0" />
  <xacro:property name="finger_right_offset_y" value="-0.015" />
  <xacro:property name="finger_right_offset_z" value="-0.05" />
  <xacro:property name="finger_radius" value="0.025" />
  <xacro:property name="finger_length" value="0.13" />
     
  <!-- Define the torso -->
  <xacro:macro name="finger_right" params="parent name">
    <joint name="${name}_joint" type="revolute">
      <origin xyz="${finger_right_offset_x} ${finger_right_offset_y} ${finger_right_offset_z}" rpy="0 0 0" />
      <axis xyz="1 0 0"/>
      <limit effort="1.0" lower="-2.617" upper="0.6" velocity="1.571"/>
      <parent link="${parent}_link"/>
      <child link="${name}_link"/>
    </joint>
    <link name="${name}_link">
      <inertial>
        <mass value="0.1" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>

      <visual>
        <!-- <origin xyz="0.137 -0.17 0.332" rpy="0 ${M_PI/2} ${-M_PI/2}" />-->
        <!-- <origin xyz="0.137 -0.17 0.332" rpy="0 ${M_PI/2} ${-M_PI/2}" />-->
	<origin xyz="-0.01 0.015 0.005" rpy="0 ${M_PI/2} 0" />
	<geometry>
	  <!-- New big arm -->
          <!-- <mesh filename="package://hard_description/meshes/arm_upper_mini.dae" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}" /> -->
	  <!-- Old but a simple arm -->
	  <mesh filename="package://hard_description/meshes/mini/hand_right_simple_mini.dae" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}" />
	</geometry>
	<!-- <material color="yellow"/> -->
      </visual>
      <collision>
      <origin xyz="0  -0.055 -0.07" rpy="${-M_PI/5} 0 0" />
      <geometry>
          <cylinder length="${finger_length}" radius="${finger_radius}" />
      </geometry>
    </collision>
    </link>
  </xacro:macro>

</robot>
