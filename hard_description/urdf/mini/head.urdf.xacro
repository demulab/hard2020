<?xml version="1.0"?>

<robot name="head" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- <xacro:property name="mesh_scale" value="0.0095" /> -->
  <xacro:property name="head_offset_x" value="0.01" />
  <xacro:property name="head_offset_y" value="0" />
  <xacro:property name="head_offset_z" value="0.14" />
  <xacro:property name="head_length" value="0.05" />
  <xacro:property name="head_radius" value="0.05" />

  <!-- Define the torso -->
  <xacro:macro name="head" params="parent name">
    <joint name="${name}_joint" type="revolute">
      <origin xyz="${head_offset_x} ${head_offset_y} ${head_offset_z}" rpy="0 0 0" />
      <axis xyz="0 1 0"/>
      <limit effort="1.0" lower="-2.617" upper="2.617" velocity="1.571"/>
      <parent link="${parent}_link"/>
      <child link="${name}_link"/>
    </joint>
    <link name="${name}_link">
      <inertial>
        <mass value="1.0" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>

      <visual>
	<origin xyz="-0.37 -0.136 -0.675" rpy="${M_PI/9} 0 ${M_PI/2}" />
        <geometry>
	  <mesh filename="package://hard_description/meshes/mini/head_mini4.dae" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}" />
        </geometry>
      </visual>
      <collision>
	<origin xyz="0 0 0.12" rpy="${M_PI/2} 0 ${M_PI/2}" />
	<geometry>
          <cylinder length="${head_length}" radius="${head_radius}" />
        </geometry>
      </collision>
    </link>
  </xacro:macro>

</robot>
