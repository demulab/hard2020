<?xml version="1.0"?>

<robot name="torso_upper" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Define a number of dimensions using properties -->
  <xacro:property name="torso_upper_offset_x" value="0" />
  <xacro:property name="torso_upper_offset_y" value="0" />
  <xacro:property name="torso_upper_offset_z" value="0.4" />
  <!-- <xacro:property name="torso_upper_offset_z" value="0.4" /> -->

  <xacro:property name="torso_radius" value="0.01" />
  <xacro:property name="torso_length" value="0.4" />
     
  <!-- Define the torso -->
  <xacro:macro name="torso_upper" params="parent name">
    <joint name="${name}_joint" type="prismatic">  
      <origin xyz="${torso_upper_offset_x} ${torso_upper_offset_y} ${torso_upper_offset_z}" rpy="0 0 0" />
      <axis xyz="0 0 1"/>
      <!-- <limit effort="1.0" lower="-2.8" upper="2.8" velocity="1.571"/> -->
      <limit effort="100" lower="0" upper="0.4" velocity="1.0"/> 
      <!-- <limit effort="100" lower="0" upper="0.4" velocity="1.0"/> -->
      <!-- <dynamics friction="100" damping="100" /> -->
      <parent link="${parent}_link"/>
      <child link="${name}_link"/>
    </joint>
    <link name="${name}_link">
      <inertial>
        <mass value="1.0" />
        <origin xyz="0 0 0" />
        <inertia ixx="1.0" ixy="0.0" ixz="0.0"
                 iyy="1.0" iyz="0.0"
                 izz="1.0" />
      </inertial>

      <visual>
        <!-- <origin xyz="-0.110 -0.136 -0.62" rpy="0 0 ${M_PI/2}" /> -->
	<origin xyz="-0.110 -0.136 -0.62" rpy="0 0 ${M_PI/2}" />
	<geometry>
          <mesh filename="package://hard_description/meshes/mini/torso_upper_mini2.dae" scale="${mesh_scale} ${mesh_scale} ${mesh_scale}" />
	</geometry>
      </visual>
      <collision>
	<origin xyz="0 0 0.1" rpy="0 0 0" />
        <geometry>
          <cylinder length="0.1" radius="${torso_radius}" />
        </geometry>
      </collision>  
    </link>
  </xacro:macro>

</robot>
